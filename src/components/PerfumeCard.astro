---
const { name, brand, price, image, description } = Astro.props;
---

<div
    class="group flex h-full flex-col overflow-hidden rounded-xl border border-white/10 bg-white/5 backdrop-blur-[10px] transition-all duration-300 ease-in-out hover:-translate-y-1 hover:border-[#d4af37]/40 hover:shadow-[0_10px_30px_rgba(0,0,0,0.3)]"
>
    <div class="h-[250px] overflow-hidden">
        <img
            src={image}
            alt={name}
            loading="lazy"
            class="h-full w-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105"
        />
    </div>

    <div class="flex grow flex-col p-6">
        <p class="mb-2 text-xs tracking-[2px] uppercase text-[#d4af37]">
            {brand}
        </p>
        <h3 class="mb-4 text-xl text-white font-['Playfair_Display',_serif]">
            {name}
        </h3>
        <p class="mb-6 grow text-sm leading-relaxed text-gray-300">
            {description}
        </p>

        <div class="mt-auto flex items-center justify-between">
            <span class="text-lg font-bold text-white">${price}</span>
            <button
                class="cursor-pointer rounded border border-[#d4af37] bg-transparent px-4 py-2 text-xs text-[#d4af37] transition-all duration-300 ease-in-out hover:bg-[#d4af37] hover:text-black"
            >
                Ver m√°s
            </button>
        </div>
    </div>
</div>
