---
import Layout from "../layouts/mainlayout.astro";
import Navbar from "../components/navbar.astro";
import PerfumeCard from "../components/PerfumeCard.astro";
import { getCollection } from "astro:content";

const perfumes = await getCollection("perfumes");
---

<Layout title="Inicio">
    <Navbar />

    <main class="container">
        <section class="hero">
            <h1>Descubre tu Esencia Rabe</h1>
            <p>Una colección curada de los perfumes más exclusivos.</p>
        </section>

        <section class="perfume-grid">
            {
                perfumes.map((perfume) => (
                    <PerfumeCard
                        name={perfume.data.name}
                        brand={perfume.data.brand}
                        price={perfume.data.price}
                        image={perfume.data.image}
                        description={perfume.data.description}
                    />
                ))
            }
        </section>
    </main>
</Layout>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 4rem 2rem;
    }

    .hero {
        text-align: center;
        margin-bottom: 4rem;
        background: radial-gradient(
            circle at center,
            rgba(212, 175, 55, 0.1) 0%,
            transparent 70%
        );
        padding: 4rem 0;
        border-radius: 20px;
    }

    h1 {
        font-family: "Playfair Display", serif;
        font-size: 3.5rem;
        color: #fff;
        margin-bottom: 1rem;
        letter-spacing: -1px;
    }

    .hero p {
        font-size: 1.25rem;
        color: #aaa;
        max-width: 600px;
        margin: 0 auto;
    }

    .perfume-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2.5rem;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }

        .container {
            padding: 2rem 1rem;
        }

        .perfume-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
