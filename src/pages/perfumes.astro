---
import Layout from "../layouts/mainlayout.astro";
import Navbar from "../components/Navbar.astro";
import PerfumeCard from "../components/PerfumeCard.astro";

import { getCollection } from "astro:content";
const perfumes = await getCollection("perfumes", ({ data }) => {
    return data.type === "perfume";
});
---

<Layout title="Perfumes | Essenciarabe">
    <Navbar />
    <section class="max-w-5xl mx-auto px-6 py-12">
        <h2 class="text-4xl font-semibold text-[#1d1d1f] mb-6">
            Nuestros Perfumes
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                perfumes.map((perfume) => (
                    <PerfumeCard
                        name={perfume.data.name}
                        brand={perfume.data.brand}
                        price={perfume.data.price}
                        image={perfume.data.image}
                        description={perfume.data.description}
                        available={perfume.data.available}
                        stock={perfume.data.stock}
                    />
                ))
            }
        </div>
    </section>
</Layout>
